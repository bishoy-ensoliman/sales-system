@model GarasSales.Models.Pricing.PricingProduct_FullData_VM
<tr id="pricingRow" class="addedProducts">
    <td>
        <label class="rowIndex" value="">@ViewBag.rowIndex</label>
    </td>
    <td>
        @Html.DropDownListFor(x => Model.ProductGroupID, new SelectList(Model.productGroupVMs, "ProductGroupVMID", "ProductGroupVMName"))

    </td>
    <td>
        @Html.DropDownListFor(x => Model.ProductID, new SelectList(Model.productVMs, "ProductVMID", "ProductVMName"))

    </td>
    <td>
        @Html.TextBoxFor(x => Model.Description)
    </td>
    <td class="TTYY">
        @Html.EditorFor(x => Model.Quantity, new { htmlAttributes = new { onblur = "SetNewTotalRecord(this , 'Quantity')", onfocus = "getOldRecordData(this)" } })
    </td>
    <td>

        <input type="file" value="@Model.FileName" id="@Model.AttachmentPath" name="Model.AttachmentPath" />
    </td>
    <td>
        <input type="text" class="bomSelectedLabel" onclick="GetBomData(this,@Model.ProductID)" id="@Model.PricingBOMID" value="@Model.PricingBOMID" name="Model.PricingBOMID" readonly />
    </td>
    <td>
        <input type="number" onfocus="getOldRecordData(this)" onblur="SetNewTotalRecord(this,'Bom')" value="@Model.TotalPrice" name="Model.TotalPrice" />
    </td>
    <td>
        <input type="number" onfocus="getOldRecordData(this)" onblur="SetNewTotalRecord(this,'ExtraCost')" name="Model.PricingManagerAddPricePercentage" value="0" />
    </td>
    <td>
        <input type="text" name="Model.PricingManagerComment" value="@(Model.PricingManagerComment+" | "+Model.SalesManagerComment)" />
    </td>
    <td>
        <input type="text" value="" />
    </td>
    <td>
        <input type="text" value="" />
    </td>

</tr>

